<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_margin="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.banidevv.vasscomtestproject.uikit.component.UiKitText
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            app:fontType="body"
            android:textColor="@color/donker_100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="21dp"/>

        <com.banidevv.vasscomtestproject.uikit.component.UiKitText
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 100.000"
            app:fontType="caption"
            android:textColor="@color/orange"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginTop="12dp"/>

        <com.banidevv.vasscomtestproject.uikit.component.UiKitText
            android:id="@+id/tv_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_hospital"
            android:layout_marginTop="21dp"
            android:text="Lenmarc Surabaya"
            app:fontType="body"
            android:textColor="@color/text_gray_80"
            android:drawablePadding="7dp"
            app:layout_constraintTop_toBottomOf="@id/tv_price"
            app:layout_constraintStart_toStartOf="@id/tv_price"/>

        <com.banidevv.vasscomtestproject.uikit.component.UiKitText
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_place"
            android:layout_marginTop="8dp"
            android:text="Dukuh Pakis, Surabaya"
            app:fontType="caption"
            android:textColor="@color/text_gray_50"
            android:drawablePadding="7dp"
            app:layout_constraintTop_toBottomOf="@id/tv_hospital"
            app:layout_constraintStart_toStartOf="@id/tv_hospital"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"/>
        
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_main"
            android:layout_width="120dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>